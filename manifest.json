{
  "manifest_version": 2,

  "name": "Flite Finder",
  "description": "Finds Flite ads on pages and opens tabs",
  "version": "1.3",
  "author": "Andy Hills",

  "browser_action": {
    "default_icon": "icons/flite-finder-icons_active.png"
  },
  
  "icons": {"128": "icons/flite-finder-icons_active.png"},

  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "webNavigation",
    "http://*/*", "https://*/*"
  ],

  "background": {
    "scripts": ["findAd.js"],
    "persistent": true
  }
}
